# Required in production usage; if omitted, gateway falls back to a DB-stored secret.
JWT_SECRET=replace-with-a-strong-random-secret

# Optional settings
HOST=127.0.0.1
PORT=8787
CODEX_WS_URL=ws://127.0.0.1:4500
AUTO_START_CODEX_APP_SERVER=1
CODEX_APP_SERVER_BIN=codex
CODEX_APP_SERVER_LISTEN=ws://127.0.0.1:4500
# Set this to your MagicDNS host if Tailscale CLI is available:
# tailscale status --json
PUBLIC_BASE_URL=https://laptopname.tailnet.ts.net
TOKEN_HASH_SECRET=replace-with-optional-extra-secret
DB_PATH=./data/gateway.sqlite
